<?xml version="1.0" standalone="no"?> <!--*- mode: nxml -*-->
<!DOCTYPE moduleset SYSTEM "moduleset.dtd">
<?xml-stylesheet type="text/xsl" href="moduleset.xsl"?>
<moduleset>

  <repository type="svn" name="0pointer.de"
    href="svn://0pointer.de/"/>

  <tarball id="libsamplerate" version="0.1.3" supports-non-srcdir-builds="no">
   <source href="http://www.mega-nerd.com/SRC/libsamplerate-0.1.3.tar.gz"
    size="4261589" md5sum="3f91af22a6c4135485594d0d2c91d45d"/>
  </tarball>

  <tarball id="libsndfile" version="1.0.17" supports-non-srcdir-builds="no"
