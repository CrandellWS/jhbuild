    <dep package="gstreamer"/>
    <dep package="gst-plugins-base"/>
    <dep package="pulseaudio"/>
   </dependencies>
  </autotools>

  <metamodule id="meta-pulseaudio">
    <dependencies>
     <dep package="pulseaudio"/>
     <dep package="gst-pulse"/>
     <dep package="pavucontrol"/>
     <dep package="pavumeter"/>
     <dep package="paprefs"/>
     <dep package="paman"/>
     <dep package="padevchooser"/>
    </dependencies>
  </metamodule>

</moduleset>