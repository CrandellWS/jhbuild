  </autotools>

  <autotools id="pavumeter">
   <branch repo="0pointer.de" module="pavumeter/trunk" checkoutdir="pavumeter"/>
   <dependencies>
    <dep package="pulseaudio"/>
    <dep package="gtkmm"/>
   </dependencies>
  </autotools>

  <autotools id="paman">
   <branch repo="0pointer.de" module="paman/trunk" checkoutdir="paman"/>
   <dependencies>
    <dep package="pulseaudio"/>
    <dep package="gtkmm"/>
    <dep package="libglademm"/>
